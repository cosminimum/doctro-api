<style>
    .channel-stats-bg {
        background-image: url('{{ asset('theme/media/images/2600x1600/bg-3.png') }}');
    }
    .dark .channel-stats-bg {
        background-image: url('{{ asset('theme/media/images/2600x1600/bg-3-dark.png') }}');
